<% inat = node[:inaturalist] %>
// Example config file for the windshaft server
// Fill with the appropiate values and rename to config.js

// Configuration structure name
var config = {};

// Config sections
config.database = {};
config.redis = {};

// database connection params
// The database user
config.database.user = '<%=
  (inat && inat[:postgres_user]) ? inat[:postgres_user] : 'postgres'
%>';
// IP address or name of the postgresql database server
config.database.host = '<%=
  (inat && inat[:postgres_host]) ? inat[:postgres_host] : '127.0.0.1'
%>';
// Port in which the postgresql instance listens for connections
config.database.port = <%=
  (inat && inat[:postgres_port]) ? inat[:postgres_port] : '5432'
%>;
// Name of the geometry field
config.database.geometry_field = 'geom';
// Spatial reference system id
config.database.srid = 4326;
// Postgresql database name
config.database.database_name = '<%=
  (inat && inat[:postgres_database]) ?
    inat[:postgres_database] :
    'inaturalist'
%>';

// redis-server params
config.redis.host = '127.0.0.1';
config.redis.port = 6379;

// debugging
config.debug = <%=
  (inat && inat[:debug]) ? 'true' : 'false';
%>;

module.exports = config;
