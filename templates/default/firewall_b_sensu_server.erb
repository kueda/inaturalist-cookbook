# sensu rabbitmq
<%- node["all_nodes"].each do |server| -%>
# <%= server["name"] %>
-A INPUT -p tcp -s <%= server["ipaddress"] %> --dport 5671 -j ACCEPT
<%- if server["public_ipaddress"] != server["ipaddress"] %>
  -A INPUT -p tcp -s <%= server["public_ipaddress"] %> --dport 5671 -j ACCEPT
<%- end -%>
<%- end -%>

